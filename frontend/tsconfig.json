{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "src/store/**/*", "tools/types"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@contracts/*": ["./contracts/*"]
    },
    "importsNotUsedAsValues": "preserve",
    "preserveValueImports": false,
    "isolatedModules": false
  },

  "references": [
    {
      "path": "./tsconfig.vite-config.json"
    }
  ]
}
